<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Emotions" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EmotionDemo.EmotionPage">
	    <ScrollView>
			<ActivityIndicator Color="Black" IsRunning="true" />

			<StackLayout>
				<Label Text="Here are the emotions involved with this picture:" />
				<StackLayout>
					<Image x:Name="imageUrl" Source="{Binding ImageUrl}" />
					<Label x:Name="emotionType" Text="{Binding .}" />
					<Label x:Name="emotionScore" Text="{Binding .}" />
					<BoxView x:Name="boxView" />
				</StackLayout>
			</StackLayout>
	    </ScrollView>
</ContentPage>
